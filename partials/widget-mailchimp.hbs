<!-- strat newsletter widget -->
<div class="widget">
	<h4 class="widget-title">{{t "Subscribe"}}</h4>
	<div class="content newsletter">
		<div id="mc_embed_signup">
			<p>{{t "Get our latest article delivered to your email box."}}</p>
			<form action="#" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" novalidate>
				<div class="form-group">
    				<label class="sr-only" for="mc-embedded-subscribe">{{t "Email Address"}}</label>
					<div class="input-group">
						<input type="email" value="" name="EMAIL" class="form-control required email" id="mce-EMAIL" placeholder="{{t "Enter your email..."}}">
						<div class="input-group-btn">
							<input type="submit" value="{{t "Subscribe"}}" name="subscribe" id="mc-embedded-subscribe" class="form-control btn btn-primary">
						</div>
					</div>
				</div>
			</form>
		</div>
		<div id="message"></div>
	</div>
</div>
<!-- end newsletter widget -->